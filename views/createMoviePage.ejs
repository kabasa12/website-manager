<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <title>Movies Management</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
      </head>
    <body>
        <div class="container" style="color: white;">
            <div class="row">
                <div class="col-md-7">
                    <h1>Create Movies</h1>
                    <hr>
                    <form action="/movies/addMovie" method="POST">
                        <div class="form-group row">
                            <label for="name" class="col-form-label col-sm-2">Movie Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="name" class="form-control" required>
                            </div>  
                        </div>
                        <div class="form-group row">
                            <label for="name" class="col-form-label col-sm-2">Movie Image</label>
                            <div class="col-sm-10">
                                <input type="text" name="image" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="lang" class="col-form-label col-sm-2">Language</label>
                            <div class="col-sm-10">
                                <select name="language" id="language" class="form-control" required>
                                    <option disabled selected value> -- select Language -- </option>
                                    <%  lang.map(lan => { %>
                                    <option value="<%= lan %>"><%= lan %></option>
                                    <% }) %>
                                </select>
                            </div>  
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-offset-2 col-sm-10">
                                <h4>Genres</h4>
                                <%  genres.map(genre => { %>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="genres" value="<%= genre %>">
                                            <%= genre %></label>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="form-group row">        
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary"> Search </button>
                            </div>
                        </div> 
                    </form>
                    <% if(locals.message){ %>
                        <div style="color: red;"><%=message.error%></div>
                    <% } %>
                    <div class="button-wrp row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button class="btn btn-dark">
                            <a style="color: white;" href="/menuPage"> Back To Menu </a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>