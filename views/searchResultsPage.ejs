<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <title>Movies Management</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </head>
    <body style="background-image: none; background-color: black;">
        <div class="container" style="color: white;">
            <div class="row">
                <div class="col-md-4">
                    <h1>Search Results</h1>
                    <hr>
                </div>
            </div>
            <div class="row result-buttons">
                <div class="col-sm-2">
                    <button class="btn btn-dark">
                    <a style="color: white;" href="/movies/search-movie">Back To Search</a></button>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-dark">
                    <a style="color: white;" href="/menuPage">Back To Menu</a></button>
                </div>
            </div> 
            <div class="row">
                <div class="result-wrp container">
                    <h3 class="title">Matched Movies</h3>
                    <div class="result-details row">
                        <%  matchMovies.map(movie => { %>
                            <div class='result-item col-md-3' key="<%=movie.id %>">
                                <div class='image '><a href="/movies?id=<%= movie.id %>">
                                    <img src ="<%= movie.image %>"></a>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                    <hr>

                    <h3 class="title">Matched Genres</h3>
                    <div class="result-details row">
                        <%  genresMovies.map(movie => { %>
                            <div class='result-item col-md-3' key="<%=movie.id %>">
                                <div class='image '><a href="/movies?id=<%= movie.id %>">
                                    <img src ="<%= movie.image %>"></a>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>   
        </div>
    </body>
</html>