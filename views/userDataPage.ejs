<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <title>Movies Management</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <div class="container" style="color: white;">
            <div class="row">
                <div class="col-md-7">
                    <% if(locals.user) { %>
                    <h1>Update User</h1>
                    <hr>
                    <form action="/updateUser" method="POST">
                        <div class="form-group row">
                            <label for="userName" class="col-form-label col-sm-2">User</label>
                            <div class="col-sm-10">
                                <input type="email" name="userName" class="form-control" value="<%= user.userName %>">     
                                <input type="hidden" name="id" class="form-control"  value="<%= user.id %>">
                            </div> 
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-form-label col-sm-2">Password</label>
                            <div class="col-sm-10">
                                <input type="password" name="password" class="form-control" value="<%= user.password %>">
                            </div> 
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary"> Update </button>
                            </div>
                        </div>   
                    </form>
                    <% } else { %>
                    <h1>Add User</h1>
                    <hr>
                    <form action="/addUser" method="POST">
                        <div class="form-group row">
                            <label for="userName" class="col-form-label col-sm-2">User</label>
                            <div class="col-sm-10">
                                <input type="email" name="userName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-form-label col-sm-2">Password</label>
                            <div class="col-sm-10">
                                <input type="password" name="password" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="createdDate" class="col-form-label col-sm-2">Created Date</label>
                            <div class="col-sm-10">
                                <input type="date" name="createdDate" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="numOfTransaction" class="col-form-label col-sm-2">Transactions Allow</label>
                            <div class="col-sm-10">
                                <input type="number" name="numOfTransaction" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary"> Save </button>
                            </div>
                        </div>
                    </form>
                    <% } %>
                    <% if(locals.message){ %>
                        <div><%=message.error%></div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>