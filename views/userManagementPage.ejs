<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <title>Movies Management</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <div class="container" style="color: white;">
            <div class="row">
                <div class="col-md-7">
                    <h1>User Management</h1>
                    <hr>
                    <div class="row result-buttons">
                        <div class="col-sm-6">
                            <button class="btn btn-primary">
                            <a style="color: white;" href="/addUser">Add New User</a></button>
                        </div>
                    </div> 
                    <table class="table table-borderless" style="color: white;">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Created Date</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.map(user => { %>
                                <tr key="<%= user.id %>">
                                    <th scope="row"><%=user.userName%></th>
                                    <td><%=user.createdDate%></td>
                                    <td> <% if(!user.isAdmin) { %>
                                        <button class="btn btn-outline-warning btn-sm">
                                            <a style="color: white;" href="/updateUser?id=<%= user.id %>">Update</a>
                                        </button>
                                        <% } %>
                                    </td>
                                    <td> <% if(!user.isAdmin) { %>
                                        <button class="btn btn-outline-danger btn-sm">
                                            <a style="color: white;" href="/deleteUser?id=<%= user.id %>">X</a>
                                        </button>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <div class="row result-buttons">
                        <div class="col-sm-6">
                            <button class="btn btn-dark">
                            <a style="color: white;" href="/menuPage">Back To Menu</a></button>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </body>
</html>